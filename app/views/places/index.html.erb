<% if @current_user %>

<h1>Places</h1>

<p>
  <a href="/places/new" class="btn btn-primary">New place</a>
</p>

<ul class="list-group list-group-flush">
  <% for place in @places %>
  <a href="/places/<%= place["id"] %>" class="list-group-item list-group-item-action"><%= place["name"] %></a>
  <% end %>
</ul>
<p></p>


<% else %>

<div class="alert alert-primary" role="alert">
  Please <a href="/login" class="alert-link">login</a> to continue.
</div>

<% end %>