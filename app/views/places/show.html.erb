<% if @current_user %>

<h1><%= @place["name"] %></h1>

<p>
  <a href="/posts/new?place_id=<%= @place["id"] %>" class="btn btn-primary">New Post</a>
</p>

<div class="row">
  <% for post in @posts %>
    <div class="col-md-4 col-sm-6">
      <h3><%= post["title"] %></h3>
      <p><%= post["posted_on"] %></p>
      <% if post.uploaded_image.attached? %>
      <img src="<%= url_for(post.uploaded_image) %>" class="img-fluid">

      <% else %>
      <img src="<%= post["image"] %>" class="img-fluid">
      <% end %>
      <p><%= post["body"] %></p>
       <p><%= post["description"] %></p>
    </div>
  <% end %>
</div>

<% else %>

<div class="alert alert-primary" role="alert">
  Please <a href="/login" class="alert-link">login</a> to continue.
</div>

<% end %>